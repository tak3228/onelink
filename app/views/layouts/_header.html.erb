<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<div class="row">
			<%= link_to image_tag("logo.png"), root_path, id: "logo" %>
			<nav>
				<ul class="nav navbar-nav navbar-right">
					<% unless logged_in? %>
					<li><%= link_to "新規登録" , signup_path %></li>
					<li><%= link_to "ログイン", login_path %></li>
				<% else %>
					<li>
						<%= link_to root_path(current_user), class: "link-add" do %>
						<span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
					</li>
					<% end %>
					<li>
						<%= link_to new_link_path(current_user), class: "link-add" do %>
						<span class="glyphicon glyphicon-plus" aria-hidden="true">
							リンクを追加</span>
						<% end %>
					</li>

					<li>
						<%= link_to origin_path(current_user), class: "link-add" do %>
						<span class="glyphicon glyphicon-tags" aria-hidden="true">タグ管理</span>
					</li>
					<% end %>

					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
							<span class="glyphicon glyphicon-user" aria-hidden="true">
								<%= current_user.name %></span>
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "プロフィール", current_user %></li>
							<li><%= link_to "設定", edit_user_path(current_user) %></li>
							<li class="divider"></li>
							<li>
								<%= link_to "ログアウト", logout_path, method: "delete" %>
							</li>
						</ul>
					</div>
				</li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>
