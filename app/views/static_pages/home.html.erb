<% if logged_in? %>
<div class="container-fluid">
	<% img = "http://capture.heartrails.com/200x200/border?" %>
	<% @links.each do |link| %>
	<div class="row">
		<% if link.first.present? %>
		<% bunrui = link.first.bunrui %>
		<div class="daimei">
			<h3><%= Origin.find(bunrui).content %></h3>
		</div>
	<% end %>
		<% link.each do |elm| %>
		<div class="item-box">
			<div class="image">
				<div class="img-wrap">
					<%= link_to image_tag( img + elm.url ), elm.url, :target => "_blank", class: "nonmover" %>
					<%= link_to elm.title, elm.url, :target => "_blank", class: "nonmover" %>
					<div class="aicon">
						<%= link_to "", link_path(elm.id), :method => "delete",
										class: "glyphicon glyphicon-trash", data: { confirm: '削除してもよろしいですか？'} %>
						<%= link_to "" , edit_link_path(elm.id) , class: "glyphicon glyphicon-pencil" %>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<% end %>
</div>

<div class="announce">
	<% if @links.first.empty? %>
		<h1 class="up">↑</h1>
		<h1>リンクを追加しましょう</h1>
 	<% end %>
</div>

<% else %>
<div class="center jumbotron">
	<h1>ようこそOneLinkへ</h1>
	<%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
