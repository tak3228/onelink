<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
				<% img = "http://capture.heartrails.com/200x200/cool?" %>
				<% @links.each do |linkbunrui| %>　<%# ＠linksには配列で分類ごとに入ってる %>
					<% linkbunrui.each do |link| %>
						<div class="item-box">
							<div class="image">
								<div class="img-wrap">
									<%= link_to image_tag( img + link.url ),link.url %>
									<%= link_to link.title, link.url %>
								</div>
							</div>
						</div>
					<% end %>
				<% end %>
			</section>
		</aside>
	</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>ようこそOneLinkへ</h1>

		<%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
<% end %>
